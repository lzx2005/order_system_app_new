<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:focusable="false"
    android:descendantFocusability="blocksDescendants">

    <ImageView
        android:id="@+id/rest_avatar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginRight="5dp"
        android:src="@mipmap/ic_launcher"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/rest_first_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/rest_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="校园"
                android:textSize="12dp"
                android:layout_marginRight="3dp"
                android:textColor="@color/white"
                android:background="@drawable/tag_textview_style"/>
            <TextView
                android:id="@+id/rest_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:textSize="12dp"
                android:gravity="left"
                android:text="asdawdawxawxa"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingBottom="5dp">
            <RatingBar
                android:id="@+id/rest_rating"
                style="?android:attr/ratingBarStyleSmall"
                android:stepSize="0.1"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:rating="3.3"
                android:scrollbarSize="10dp"
                android:backgroundTint="@color/lightGrey"
                android:progressBackgroundTint="@color/lightGrey"
                android:secondaryProgressTint="@color/lightGrey"
                android:progressTint="@color/yellow">
            </RatingBar>
            <TextView
                android:id="@+id/rest_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="2dp"
                android:paddingLeft="5dp"
                android:textSize="10dp"
                android:text="4.9"
                android:textColor="@color/yellow" />

            <TextView
                android:id="@+id/rest_sold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="2dp"
                android:paddingLeft="5dp"
                android:textSize="10dp"
                android:text="月售0件"
                android:textColor="@color/grey" />
            <TextView
                android:id="@+id/rest_dis"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="right"
                android:paddingTop="2dp"
                android:textSize="10dp"
                android:text="距您0米"
                android:textColor="@color/grey" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </LinearLayout>

    </LinearLayout>
</LinearLayout>